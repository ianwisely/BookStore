            {
                HttpMethod = "PUT",
                OnSuccess = "removeFromShoppingCart"
            }))
            {
            }*@

        </tr>
    }
    <tr>
        <td>Total:</td>
        <td id="total-price">€@totalPrice</td>
    </tr>
</table>
<div class="clear"></div>
@using (Html.BeginForm("BuyBooks", "Order", FormMethod.Get))
{
    <input type="submit" value="Procede To Checkout" />
}
