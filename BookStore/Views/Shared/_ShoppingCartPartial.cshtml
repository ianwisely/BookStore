@model BookStore.ViewModel.OrderModel.ShoppingCartViewModel


<h2>Shopping Cart</h2>
<table id="shopping-cart-table">
    @{decimal totalPrice = 0;}
    @foreach (var book in Model.Books)
    {
        totalPrice += book.Price;
        <tr id="cart-@book.Id">
            <td>@book.Title</td>
            <td>€@book.Price</td>
